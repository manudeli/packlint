{
  "include": [
    "./packages/**/package.json"
  ],
  "merge": {
    "type": "module",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.js",
    "scripts": {
      "prepack": "yarn build",
      "build": "rm -rf dist && tsup ./src/index.ts --format esm --dts",
      "dev": "yarn run build --watch",
      "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
      "tsup": "^6.5.0",
      "typescript": "4.8.3",
      "vite": "^4.0.2",
      "vitest": "^0.26.1"
    },
    "publishConfig": {
      "access": "public"
    }
  }
}
