{
  "name": "packlint",
  "version": "0.0.5",
  "exports": {
    ".": {
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "import": "./esm/index.mjs",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    },
    "bin": {
      "packlint": "./bin/index.js"
    }
  },
  "main": "./src/index.ts",
  "bin": "./bin/internal.js",
  "scripts": {
    "prepack": "yarn build",
    "test": "jest",
    "build": "rm -rf dist esm && tsc --declaration --emitDeclarationOnly --declarationDir dist && rollup -c rollup.config.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@packlint/core": "workspace:^",
    "@packlint/sort": "workspace:^",
    "@packlint/validate": "workspace:^",
    "clipanion": "^3.2.0-rc.13"
  },
  "devDependencies": {
    "@toss/rollup-config": "^0.0.1",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "jest": "^29.2.2",
    "rollup": "2.79.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.3"
  }
}
